@model IEnumerable<projektzaginione.Models.LosePeople>
@{ ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<br />
<h2>Lista Zaginionych</h2>
<hr />

<p style="text-align:right"> <b> @Html.ActionLink("Dodaj zaginionego", "Create", "LosePeople", null, new { @class = "btn btn-lg btn-warning" })</b></p>


 <input class="form-control" id="myInput" type="text" placeholder="Szukaj..." style="text-align:left"><br />


<table id="peoples" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Wiek</th>
            <th>Lokalizacja</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="myTable">
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Imie)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nazwisko)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Wiek)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Lokalizacja)
    </td>
    <td>
        @Html.ActionLink("Pokaż szczegóły", "Details", new { id = item.Id })
    </td>
</tr>
}
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
